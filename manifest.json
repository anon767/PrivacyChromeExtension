{
  "manifest_version": 3,
  "name": "Privacy Shield",
  "version": "1.0.0",
  "description": "Blocks tab switching and keyboard shortcut detection",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injected.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN",
      "match_about_blank": true,
      "match_origin_as_fallback": true
    }
  ]
}
